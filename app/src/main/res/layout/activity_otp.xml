<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
      android:gravity="center"
        android:layout_marginTop="53dp"
        android:background="@color/notif_color"
        android:textColor="@color/txt_color_white"
        android:text="Your OTP will be automatically read"

        android:textSize="20sp"
        />

    <EditText
        android:id="@+id/et_otp_otp"
        android:layout_width="279dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="179dp"
        android:ems="10"
        android:hint="Reading OTP..."
        android:inputType="textPassword"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_otp_done"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="153dp"

        android:text="DONE"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_otp_cancel"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_otp_done"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:text="CANCEL"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_otp_resend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:text="RESEND"
        android:textStyle="bold|italic" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="58dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/et_otp_otp"
        android:layout_toEndOf="@+id/et_otp_otp"
        android:background="@android:color/background_light"
        android:visibility="gone"
        app:srcCompat="@android:drawable/ic_menu_view" />
</RelativeLayout>