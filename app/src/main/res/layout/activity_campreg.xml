<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".campreg"
    android:background="@drawable/rain">

    <TextView
        android:id="@+id/textView29"
        android:layout_width="115dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:text="Userid:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="117dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="96dp"
        android:text="District:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="113dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginTop="179dp"
        android:text="Password:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="115dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView29"
        android:layout_marginBottom="218dp"
        android:text="Address:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnCampReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="0dp"
        android:background="@color/btn_color"
        android:text="REGISTER"
        android:textColor="@android:color/background_light"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/editText31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="E-mail or phone no:"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView30"
        android:layout_alignStart="@+id/editText31"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignStart="@+id/editText31"
        android:textColor="#ffffff"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText34"
        android:layout_width="wrap_content"
        android:layout_height="157dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView32"
        android:layout_marginEnd="24dp"
        android:textColor="#ffffff"
        android:ems="10"
        android:hint="postal address"
        android:inputType="textMultiLine" />
</RelativeLayout>