<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donationreg">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="41dp"
        android:text="a/c0123458763456987"
        android:textAlignment="center"
        android:textColor="#fe124406"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="111dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="118dp"
        android:text="Name           :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="109dp"
        android:layout_height="29dp"
        android:layout_alignEnd="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_marginTop="184dp"
        android:text="Branch          :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/textView17"
        android:layout_centerVertical="true"
        android:text="A/C no       :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="101dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginBottom="168dp"
        android:text="IFSC code:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="99dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginBottom="102dp"
        android:text="Amount    :"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_don_trans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="0dp"
        android:text="Transfer"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"

        android:textStyle="bold|italic"
        android:visibility="visible" />

    <EditText
        android:id="@+id/et_don_name"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignTop="@+id/textView18"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_don_branch"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignTop="@+id/textView19"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_don_ifsc"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignTop="@+id/textView21"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_don_amt"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignTop="@+id/textView22"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_don_acc"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPassword" />

</RelativeLayout>