<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PASSWO">

    <TextView
        android:id="@+id/textView37"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="81dp"
        android:text="New password:"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="118dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/textView37"
        android:layout_centerVertical="true"
        android:text=" Confirm password:"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView37"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText39"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/button32"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:background="#fe124406"
        android:text="DONE"
        android:textColor="@android:color/background_light"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button33"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button32"
        android:layout_marginEnd="1dp"
        android:background="#fe124406"
        android:text="CANCEL"
        android:textColor="@android:color/background_light"
        android:textStyle="bold|italic" />
</RelativeLayout>