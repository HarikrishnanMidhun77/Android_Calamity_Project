<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:text="MESSAGES"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="152dp"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView12"
        android:layout_marginTop="107dp"
        android:text="Location                :"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="177dp"
        android:text="Phone No             :"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="11dp"
        android:text="Type of Calamity :"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="152dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="183dp"
        android:text="Name                   :"
        android:textColor="#fe124406"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_msg_send"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="96dp"
        android:layout_marginStart="-11dp"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:text="SEND"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_msg_show"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_msg_send"
        android:background="@color/btn_color"
        android:textColor="@color/txt_color_white"
        android:text="SHOW"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/btn_msg_call"
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:background="#fe124406"
        android:text="EMERGENCY CALL"
        android:visibility="gone"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/imgCam"
        android:layout_width="38dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:background="@android:color/background_light"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/et_msg_loc"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginEnd="98dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imgLocShare"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView11"
        android:layout_marginEnd="49dp"
        android:background="@android:color/background_light"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <EditText
        android:id="@+id/et_msg_phno"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_msg_loc"
        android:layout_alignTop="@+id/textView12"
        android:ems="10"
        android:inputType="phone"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_msg_name"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignEnd="@+id/et_msg_phno"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/sp_calam"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="192dp"
        android:entries="@array/calamities" />
</RelativeLayout>